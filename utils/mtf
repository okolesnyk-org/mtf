if (PHP_SAPI !== 'cli') {
    echo 'utils/mtf must be run as a CLI application';
    exit(1);
}

try {
    $mtfRoot = dirname(__DIR__);
    $mtfRoot = str_replace('\\', '/', $mtfRoot);
    require $mtfRoot . '/bootstrap.php';
} catch (\Exception $e) {
    echo 'Autoload error: ' . $e->getMessage();
    exit(1);
}
try {
    $objectManager = \Magento\Mtf\ObjectManagerFactory::getObjectManager();
    $application = $objectManager->create('Magento\Mtf\Console\Cli');
    $application->run();
} catch (\Exception $e) {
    while ($e) {
        echo $e->getMessage();
        echo $e->getTraceAsString();
        echo "\n\n";
        $e = $e->getPrevious();
    }
    exit(1);
}
